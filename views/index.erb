<h1>Word Definer</h1>

<h2>Existing words</h2>

<ul>
  <% @words.each() do |word| %>
  <li><a href="/words/<%= word.id %>"><%= word %></a></li>
    <% end %>
</ul>

<h2>Add a new word</h2>

<form action="/new" method="post">
  <label for="word">New word</label>
    <input type="text" name="word">
  <button type="submit">Add a word!</button>
</form>
